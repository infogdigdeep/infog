		<log4j.version>1.2.14</log4j.version>
		<mongodb.driver.version>2.7.2</mongodb.driver.version>
		<glassfish.directory>C:\development\tmp\glassfish3\glassfish3\glassfish</glassfish.directory>
	</properties>
</project>
